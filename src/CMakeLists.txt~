CMAKE_MINIMUM_REQUIRED(VERSION 2.8)

INCLUDE_DIRECTORIES(${PROJECT_SOURCE_DIR}/include)
SET(SVM_SRC svm.cpp)
SET(ARLK_SKEDATA_SRC ARLK/SkeData.cpp)
SET(ARLK_KNN_SRC ARLK/KNNClassifier.cpp)
SET(ARLK_SVM_SRC ARLK/SVMClassifier.cpp)
SET(ARLK_BASE_SRC ARLK/BaseClassifier.cpp)

IF(${CMAKE_SYSTEM_NAME} MATCHES "Windows")
	SET(LIBRARY_OUTPUT_PATH ${PROJECT_SOURCE_DIR}/win32/lib)

ELSEIF(${CMAKE_SYSTEM_NAME} MATCHES "Linux")
	SET(LIBRARY_OUTPUT_PATH ${PROJECT_SOURCE_DIR}/lib)
ENDIF(${CMAKE_SYSTEM_NAME} MATCHES "Windows")

ADD_LIBRARY(svm STATIC ${SVM_SRC})
ADD_LIBRARY(SkeData STATIC ${ARLK_SKEDATA_SRC})
ADD_LIBRARY(KNNClassifier STATIC ${ARLK_KNN_SRC})
ADD_LIBRARY(SVMClassifier STATIC ${ARLK_SVM_SRC})
ADD_LIBRARY(BaseClassifier STATIC ${ARLK_BASE_SRC})
